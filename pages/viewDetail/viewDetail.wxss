.userColumn {
  width: 100%;
  height: 45px;
}

.userColumn .userColumnImg {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.userColumn .userColumnUsername {
  position: relative;
  top: -34px;
  left: 50px;
}
.notFollowed {
  position: absolute;
  border: 1px #FE9A5E solid;
  border-radius: 16px;
  top: 14px;
  right: 10%;
  padding: 2px 10px;
  color: #FE9A5E;
  font-size: 32rpx;
}
.followed {
  position: absolute;
  border: 1px #8a8a8a solid;
  border-radius: 16px;
  top: 14px;
  right: 10%;
  padding: 2px 10px;
  color: #8a8a8a;
  font-size: 32rpx;
}

.swiperImg {
  display:flex;
  justify-content: center;        
  align-items:center; 
  background-color: #eeeeeeA8;
}
.side-img {
  width: 320px;
}

